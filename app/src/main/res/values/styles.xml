<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="progressBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="styleBottomButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:fontFamily">sanf-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="MyDatePickerSpinnerStyle">
        <item name="android:colorControlNormal">@color/main</item>
    </style>

</resources>
